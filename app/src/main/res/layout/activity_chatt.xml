<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#206DAA"
    tools:context=".chatt">

    <ImageButton
        android:id="@+id/sendmessageb"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/send"
        android:elevation="11dp"
        android:scaleType="centerInside"
        android:scaleX="1.1"
        android:scaleY="1.1"
        android:src="@drawable/send"
        app:layout_constraintBottom_toBottomOf="@id/writev"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.959"
        app:layout_constraintTop_toTopOf="@id/writev"
        app:tint="@color/white" />

    <View
        android:id="@+id/writev"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roundedview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/messagewr"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="67dp"
        android:background="@drawable/rounded_edittext_write"
        android:elevation="1dp"
        android:ems="10"
        android:hint="Введите сообщение"
        android:inputType="text"
        android:paddingLeft="12dp"
        android:paddingTop="1dp"
        android:strokeWidth="6"
        android:strokeColor="#7C7BB7"
        android:textColor="@color/black"
        android:textColorHint="#AB000000"
        android:textColorLink="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/writev"
        app:layout_constraintEnd_toEndOf="@+id/writev"
        app:layout_constraintStart_toStartOf="@+id/writev"
        app:layout_constraintTop_toTopOf="@+id/writev" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="#1D7ECC"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="2dp"
        android:background="@drawable/back"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:gravity="center"
        android:text="Имя"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mymessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:background="@drawable/roundedtext"
        android:maxWidth="320dp"
        android:maxLength="150"
        android:minWidth="120dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="30dp"
        android:paddingBottom="25dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="17sp"
        android:translationX="1000dp"
        app:layout_constraintBottom_toTopOf="@+id/writev"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameold"
        app:layout_constraintVertical_bias="0.859" />

    <TextView
        android:id="@+id/hismessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedtext"
        android:maxWidth="320dp"
        android:maxLength="150"
        android:minWidth="120dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_marginLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="25dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/writev"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameold"
        app:layout_constraintVertical_bias="0.859" />

</androidx.constraintlayout.widget.ConstraintLayout>