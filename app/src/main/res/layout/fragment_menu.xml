<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:id="@+id/relaout"
    tools:context=".chatFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="100dp"
        android:gravity="center"
        android:text="Меню"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="55sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/policy"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/settngs"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        />

    <View
        android:id="@+id/settingsm"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/settngs"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="90dp"
        />

    <View
        android:id="@+id/profilem"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/settngs"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="170dp"
        />

    <TextView
        android:id="@+id/policyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/policyimg"
        android:layout_alignTop="@id/policy"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="20dp"
        android:maxWidth="350dp"
        android:text="Правовая информация" />

    <ImageView
        android:id="@+id/policyimg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/policy"
        android:layout_alignTop="@id/policy"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="14dp"
        android:background="@android:color/transparent"
        android:src="@drawable/policy"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/settingst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/settingsimg"
        android:layout_alignTop="@id/settingsm"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="20dp"
        android:maxWidth="350dp"
        android:text="Настройки" />

    <ImageView
        android:id="@+id/settingsimg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/settingsm"
        android:layout_alignTop="@id/settingsm"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="14dp"
        android:background="@android:color/transparent"
        android:src="@drawable/settings"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/profilet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/profileimg"
        android:layout_alignTop="@id/profilem"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="20dp"
        android:maxWidth="350dp"
        android:text="Профиль" />

    <ImageView
        android:id="@+id/profileimg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/profilem"
        android:layout_alignTop="@id/profilem"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="14dp"
        android:background="@android:color/transparent"
        android:src="@drawable/profile"
        app:tint="@color/white" />


</RelativeLayout>